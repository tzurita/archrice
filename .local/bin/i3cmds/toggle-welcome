#!/bin/sh

# Toggles the TARBS welcome message.

PIC="${XDG_DATA_HOME:-$HOME/.local/share}/tarbs/tarbs.png"

grep TARBSWELCOME "$XDG_CONFIG_HOME/xprofile" &&
	( sed -i "/TARBSWELCOME/d" "$XDG_CONFIG_HOME/xprofile" && notify-send -i "$PIC" "TARBS welcome message" "Welcome message disabled. Press Super+Shift+F1 again to reverse." ) ||
	( echo "notify-send -i \"$PIC\" \"Welcome to TARBS\" \"Press super+F1 for the help menu.\" # TARBSWELCOME" >> "$XDG_CONFIG_HOME/xprofile" &&
		notify-send -i "$PIC" "TARBS welcome message" "Welcome message re-enabled." )
