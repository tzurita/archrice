FILE=/home/zuritat/.tmux/plugins/tmux-onedark-theme/tmux-onedark-theme.tmux
sed -i -e 's/\(^set.*window-style.*comment_grey\),.*/\1"/ ; s/\(^set.*window-active-style.*onedark_white\),.*/\1"/' $FILE
